<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context=".AlarmClock.AlarmCreateActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:background="@color/mycustom"
            android:gravity="center"
            android:orientation="horizontal">

            <AnalogClock
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_gravity="center" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="vertical"
            android:padding="5dp">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/white_back_shape"
                android:padding="5dp"
                android:text="Select Time"

                android:textColor="@color/white" />

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3">

                <LinearLayout
                    android:id="@+id/lineLayout1_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="3dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textTime_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"

                        android:hint="8:00 AM"
                        android:textSize="20sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/white_back_shape"
                        android:padding="5dp"
                        android:singleLine="true"
                        android:text="Medicine Name"
                        android:textColor="@color/white" />

                    <AutoCompleteTextView

                        android:id="@+id/autoCompleteText_id"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Medicine "
                        android:singleLine="true" />

                    <AutoCompleteTextView

                        android:id="@+id/autoCompleteText2_id"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Medicine "
                        android:singleLine="true"

                        android:visibility="gone" />

                    <AutoCompleteTextView

                        android:id="@+id/autoCompleteText3_id"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Medicine "
                        android:singleLine="true"

                        android:visibility="gone" />

                    <AutoCompleteTextView

                        android:id="@+id/autoCompleteText4_id"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Medicine "
                        android:singleLine="true"

                        android:visibility="gone" />

                    <ImageButton

                        android:id="@+id/buttonAdd_id"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_baseline_add_24" />

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/lineLayout2_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="3dp"
                    android:visibility="gone"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textTime2_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:hint="8:00 AM"
                        android:textSize="20sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/white_back_shape"
                        android:padding="5dp"
                        android:singleLine="true"
                        android:text="Medicine Name"
                        android:textColor="@color/white" />

                    <AutoCompleteTextView

                        android:id="@+id/lyout2autoText1_id"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Medicine "
                        android:singleLine="true" />

                    <AutoCompleteTextView

                        android:id="@+id/lyout2autoText2_id"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Medicine "
                        android:singleLine="true"

                        android:visibility="gone" />

                    <AutoCompleteTextView

                        android:id="@+id/lyout2autoText3_id"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Medicine "
                        android:singleLine="true"

                        android:visibility="gone" />

                    <AutoCompleteTextView

                        android:id="@+id/lyout2autoText4_id"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Medicine "
                        android:singleLine="true"

                        android:visibility="gone" />

                    <ImageButton

                        android:id="@+id/lay2buttonAdd2_id"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_baseline_add_24" />

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/lineLayout3_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="3dp"
                    android:visibility="gone"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textTime3_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        android:hint="8:00 AM"
                        android:textSize="20sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/white_back_shape"
                        android:padding="5dp"
                        android:singleLine="true"
                        android:text="Medicine Name"
                        android:textColor="@color/white" />

                    <AutoCompleteTextView

                        android:id="@+id/lyout3autoText1_id"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Medicine "
                        android:singleLine="true" />

                    <AutoCompleteTextView

                        android:id="@+id/lyout3autoText2_id"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Medicine "
                        android:singleLine="true"

                        android:visibility="gone" />

                    <AutoCompleteTextView

                        android:id="@+id/lyout3autoText3_id"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Medicine "
                        android:singleLine="true"

                        android:visibility="gone" />

                    <AutoCompleteTextView

                        android:id="@+id/lyout3autoText4_id"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Medicine "
                        android:singleLine="true"

                        android:visibility="gone" />

                    <ImageButton

                        android:id="@+id/lay3buttonAdd3_id"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_baseline_add_24" />

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">


            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/white_back_shape"
                android:padding="5dp"
                android:text="Schedule"

                android:textColor="@color/white" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"></LinearLayout>

            <RadioGroup
                android:id="@+id/rdogrp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="8dp"
                android:orientation="vertical"
                android:weightSum="3">

                <RadioButton
                    android:id="@+id/btn1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="0dp"
                    android:layout_weight="1"
                    android:checked="true"
                    android:text="once"
                    app:buttonTint="@color/mycustom" />

                <RadioButton
                    android:id="@+id/btn2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="0dp"
                    android:layout_weight="1"
                    android:text="Twice"
                    app:buttonTint="@color/mycustom" />

                <RadioButton
                    android:id="@+id/btn3"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="0dp"
                    android:layout_weight="1"
                    android:text="3 Times"
                    app:buttonTint="@color/mycustom" />

            </RadioGroup>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/white_back_shape"
                android:padding="5dp"
                android:text="Schedule"

                android:textColor="@color/white" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"></LinearLayout>

            <RadioGroup
                android:id="@+id/rdogrp2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="8dp"
                android:orientation="vertical"
                android:outlineSpotShadowColor="@color/mycustom"
                android:weightSum="3">

                <RadioButton
                    android:id="@+id/btn_everyday"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:checked="true"
                    android:text="Everyday"
                    app:buttonTint="@color/mycustom" />

                <RadioButton
                    android:id="@+id/btn_customDay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Specific days in weeks"
                    app:buttonTint="@color/mycustom" />


            </RadioGroup>


            <Button
                android:id="@+id/setAlarmButton_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:backgroundTint="@color/mycustom"
                android:text="Set Alarm"
                android:textColor="@color/white" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>