<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="7dp"
    android:padding="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_margin="5dp"
        android:orientation="horizontal"
        android:padding="2dp"
        android:weightSum="5">

        <ImageView
            android:id="@+id/alarmImg_id"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_gravity="start"
            android:layout_weight="1"
            android:src="@drawable/medicine2" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="3.5"
            android:orientation="vertical"
            android:weightSum="3">

            <TextView
                android:id="@+id/alarmTextViewT_id"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="left|center"
                android:padding="2dp"
                android:singleLine="true"
                android:text="Time" />

            <TextView
                android:id="@+id/MedicineTextView_id"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="left|center"
                android:marqueeRepeatLimit="marquee_forever"
                android:padding="2dp"
                android:scrollHorizontally="true"
                android:text="medicine"
                android:singleLine="true"
                android:scrollIndicators="start"
                android:textColor="@color/mycustom"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/StatusTextView_id"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:ellipsize="marquee"
                android:gravity="left|center"
                android:marqueeRepeatLimit="@android:integer/config_longAnimTime"
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:text="days" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="0.5"
           android:layout_gravity="center|top"
            android:gravity="center"
            android:padding="2dp"
            >

            <Switch
                android:id="@+id/switch1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:checked="true"
                android:rotation="-90"
                android:thumbTint="@color/switc_thumb"
                android:trackTint="@color/switch_track" />

            <ImageView
                android:id="@+id/delete_button_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:src="@drawable/ic_baseline_delete_forever_24" />
        </LinearLayout>

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>